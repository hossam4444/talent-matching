#!/usr/bin/env node
const http = require("http");
const app = require("../app");
const { PORT } = require("../config/env.config");

const server = http.createServer(app);
server.listen(PORT, () => {
  console.log("server running on port" , PORT);
});

// Graceful Shutdown
server.on("close", () => {
  console.log("Server closing");
  process.exit(0);
});
